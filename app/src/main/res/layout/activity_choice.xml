<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stl.carquiz.ChoiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="選 択 し て く だ さ い"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="75dp"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="300sp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="ジュニア級"
            android:layout_marginBottom="35dp"
            android:background="#D0FA58"
            android:onClick="onClickJunior"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="300sp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="3       級"
            android:layout_marginBottom="35dp"
            android:background="#D0FA58"
            android:onClick="onClickGrade3"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="300sp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="2      級"
            android:layout_marginBottom="35dp"
            android:background="#D0FA58"
            android:onClick="onClickGrade2"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="300sp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="1     級"
            android:layout_marginBottom="35dp"
            android:background="#D0FA58"
            android:onClick="onClickGrade1"
            android:textSize="22sp"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:text="?"
            android:textSize="35sp"
            android:layout_marginBottom="30sp"
            android:background="@drawable/frame_style"
            android:onClick="onClick2"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
