<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stl.carquiz.MissChoiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="選 択 し て く だ さ い"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="90dp"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ジュニア級"
            android:layout_marginBottom="25dp"
            android:background="#D0FA58"
            android:onClick="onClickMissJunior"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3級"
            android:layout_marginBottom="25dp"
            android:background="#D0FA58"
            android:onClick="onClickMissGrade3"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2級"
            android:layout_marginBottom="25dp"
            android:background="#D0FA58"
            android:onClick="onClickMissGrade2"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1級"
            android:layout_marginBottom="25dp"
            android:background="#D0FA58"
            android:onClick="onClickMissGrade1"
            android:textSize="18sp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
