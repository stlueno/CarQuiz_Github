<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stl.carquiz.GradeHelpActivity">
    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="各級の説明"
                android:gravity="center"
                android:textSize="35sp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ジュニア級"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="今後のくるま業界を背負って立つべく、周りのみんなにくるまの魅力を伝えるジュニアマイスター"
                android:gravity=""
                android:layout_marginTop="10dp"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="街で見かける自動車メーカーや車種、交通ルールなど、くるま社会の一般的な知識を出題"
                android:gravity=""
                android:layout_marginTop="18sp"
                android:textSize="18sp"/>
            <View
                android:id="@+id/hairline"
                android:layout_height="3dp"
                android:layout_marginTop="16dp"
                android:layout_width="340sp"
                android:layout_gravity="center"
                android:background="#D0FA58"/>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3    級"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="くるまに興味を持ち、これからくるまや、くるま社会とのかかわりが楽しくなるマイスター"
                android:gravity=""
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="くるまに関する歴史や国内外メーカー、\n基本的なメカニズムについて出題"
                android:layout_marginTop="18sp"
                android:gravity=""
                android:textSize="18sp"/>
            <View
                android:id="@+id/hairline2"
                android:layout_height="3dp"
                android:layout_marginTop="16dp"
                android:layout_width="340sp"
                android:layout_gravity="center"
                android:background="#D0FA58"/>
            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2    級"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="くるまに関する知識を幅広く持ち、くるまのある社会、生活を楽しんでいるマイスター"
                android:gravity=""
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18sp"
                android:text="くるまの歴史やモータースポーツその他、\n具体的な車種名や型式について出題"
                android:gravity=""
                android:textSize="18sp"/>
            <View
                android:id="@+id/hairline3"
                android:layout_height="3dp"
                android:layout_marginTop="16dp"
                android:layout_width="340sp"
                android:layout_gravity="center"
                android:background="#D0FA58"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1    級"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="くるまに関する豊富な知識を持つだけではなく、その魅力を発信し、くるま社会の発展に寄与するマイスター"
                android:gravity=""
                android:layout_marginTop="18sp"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="車に関するすべてのジャンルから幅広く出題"
                android:layout_marginTop="18sp"
                android:layout_marginBottom="40sp"
                android:textSize="18sp"/>

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
